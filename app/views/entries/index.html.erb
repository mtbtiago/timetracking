<h2>Entries for <%=link_to(@project.full_name,project_path(@project))%></h1>
<% if !@entries.empty? %>
  <ul>
    <% @entries.each do |e| %>
      <li>
        <%= link_to(e.display_text,project_entry_path(@project,e)) %>
        <% if e.comments.present? %>
        <pre><%= "Optional comment: #{e.comments}"%></pre>
        <% end %>
      </li>
    <%end%>
  </ul>
  <h3>Total month: <%=@total_month_hours%></h3>
  <h4><%= link_to("New entry",new_project_entry_path) %></h4>
  <h4><%= link_to("All projects",projects_path) %></h4>
<%end%>
